@model List<Publisher>
@using BookServiceLib.DTO
@using BookServiceLib.Models

<h1>Publishers</h1>

<div class="row">
    <div class="col-md-4">
        <ul class="list-group">
            @foreach (Publisher publisher in Model)
            {
                <li class="list-group-item">
                    <a asp-controller="Publishers" asp-action="Detail" asp-route-id="@publisher.Id">@publisher.Name</a>
                </li>
            }
        </ul>
        <a class="btn btn-warning" asp-action="Insert">Insert</a>
    </div>
</div>